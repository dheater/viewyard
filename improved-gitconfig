[user]
	name = dheater
	useConfigOnly = true
	email = daniel@heater.dev
	signingkey = ~/.ssh/id-dheater.pub

[core]
	editor = vim
	autocrlf = input
	pager = less -FRX

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = simple
	autoSetupRemote = true

[merge]
	conflictstyle = diff3

[diff]
	algorithm = histogram
	colorMoved = default

[log]
	date = relative

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

# Aliases
[alias]
	# Basic shortcuts
	st = status
	ci = commit
	co = checkout
	br = branch

	# Better log views
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Creset %s' --date=short
	recent = log --since='1 week ago' --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Creset %s' --date=relative
	
	# Finding things
	find = log --grep
	who = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Creset %s' --date=short --

	# Commit inspection (use the hash from git lg)
	show = show --stat --pretty=fuller
	details = show --name-status
	files = show --name-only

	# Useful shortcuts
	last = log -1 HEAD
	unstage = reset HEAD --
	visual = !gitk

	# Show what changed
	changed = diff --name-only

	# Undo last commit (keep changes)
	undo = reset --soft HEAD~1

# Viewyard context-specific configs
[includeIf "gitdir:~/src/work/"]
    path = ~/.gitconfig-work
[includeIf "gitdir:~/src/personal/"]
    path = ~/.gitconfig-personal
